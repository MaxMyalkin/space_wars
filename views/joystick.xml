<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
<fest:doctype>html</fest:doctype>
<html>
	<head>
		<meta charset="utf-8" />
		<title>
			<fest:value>json.title</fest:value>
		</title>
		<meta name="viewport" content="
		    initial-scale=1.0,
		    user-scalable=no,
		    maximum-scale=1,
		    minimum-scale=1"/>
		<link rel="stylesheet" type="text/css" href="css/main.min.css" />
	</head>
	<body>
		<div style='color: white' id='alpha'></div>
		<div id='beta' style='color: white'></div>
		<div id='gamma' style='color: white'></div>
		<div id='mainscreen'>
			<div id='tokenForm' class='form'>
				<form class='gameOverForm'>
					<input id='token' name='token' type='text'/>
					<button id='submit' type='submit'>Click</button>
					<p class='error'></p>
				</form>

			</div>
		</div>
		<div id='errorForm' class='form'>
			<div class='gameOverForm'>
				 
				<p class='error'>Please turn your device</p>
			</div>
		</div>
	</body>
	<script type="text/javascript" src="js/lib/require.js"></script>
	<script type="text/javascript" src="js/lib/jquery.js"></script>
	<script type="text/javascript" src="js/joystick/joystick.js"></script>


</html>
</fest:template>
