<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
<fest:doctype>html</fest:doctype>
<html manifes='/joystick.manifest'>
	<head>
		<meta charset="utf-8" />
		<title>
			<fest:value>json.title</fest:value>
		</title>
		<fest:if test="!json.development">
			<link rel="stylesheet" type="text/css" href="css/main_joystick.min.css" />
		</fest:if>
		<fest:if test="json.development">
			<link rel="stylesheet" type="text/css" href="css/main_joystick.css" />
		</fest:if>

		<meta name="viewport" content="
		    initial-scale=1.0,
		    user-scalable=no,
		    maximum-scale=1,
		    minimum-scale=1"/>	
	</head>
	<body>
		<div style='color: white' id='alpha'></div>
		<div id='betta' style='color: white'></div>
		<div id='gamma' style='color: white'></div>
		<div id='fingers' style='color: white'></div>
		<div id='mainscreen'>
			<div id='tokenForm' class='form'>

				<div class='form__text' for='token'>Your token:</div>
				<input id='token' type='text'/>
				<p id='tokenError' class='form__text_error'></p>
				<div id='submit' class='form__btn'><div class='button__text'>Submit</div></div>
			</div>
			<div id='controls' style='display: none'>
				<div class='buttons'>
					<div class='button' id='disconnect'><div class='button__text disconnect'>Delete</div></div>
					<div class='button' id='restart'><div class='button__text start'>Start</div></div>
					<div class='button' id='pause'><div class='button__text pause'>Pause</div></div>
					<div class='button' id='shoot'><div class='button__text shoot'>Shoot</div></div>
				</div>
				
				<div class='switchers'>
					<div class='switcher-group' id='bulletSwitcher'>
						<div id="bullet1" class='switcher active'><div class='button__text'>b1</div></div>
						<div id="bullet2" class='switcher'><div class='button__text'>b2</div></div>
						<div id="bullet3" class='switcher'><div class='button__text'>b3</div></div>
					</div>
					<div class='switcher-group' id='shipSwitcher'>
						<div id="ship1" class='switcher active'><div class='button__text'>s1</div></div>
						<div id="ship2" class='switcher'><div class='button__text'>s2</div></div>
					</div>
				</div>
			</div>
		</div>
		<div id='errorForm' class='form'>
			<p id='error' class='form__text_error'>Please turn your device</p>
		</div>

	</body>
	<fest:if test="json.development">
		<script data-main="js/joystick/joystick" src="js/lib/require.js"></script>
		<script type="text/javascript" src="js/lib/jquery.js"></script>
	</fest:if>
	<fest:if test="!json.development">
		<script>
			console.time('load');
		</script>
		<script src="js/joystick.min.js"></script>
		<script>
			require(['joystick/joystick'], function(){
				console.timeEnd('load');
			});
		</script>
	</fest:if>
	
	

</html>
</fest:template>
